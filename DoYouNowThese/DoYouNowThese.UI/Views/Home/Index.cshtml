<script>






    @section JsPackage{
    $(document).ready(function () {

        function Close() {
         $('#MainFormRow').hide();
         $('#ProfileFormRow').hide();
        }

        Jform('#Loginform');
        Jform('#UpdateAppUserInformationForm');
        Jform('#ChangePasswordForm');
        Jform('#ResetAllInformationForm');


        $('.LoginIcon').click(function () {
             Close();
            $('#ProfileFormRow').show();
        });

          $('.HomeIcon').click(function () {
             Close();
            $('#MainFormRow').show();
        });


    });


    $('a[href="#AppUserProfile"]').click(function () {
                closeAllProfileFormRow();
           $.ajax({
            type: 'post',
            url: '@Url.Action("GetAppUserInformation","Home")',
            processData: false,
            contentType: false
        }).done(function (result) {
            if (result.message == "succes") {
                  $('#AppUserProfile').show();
                    $("#UserName").val(result.data.username);
                    $("#email").val(result.data.email);
                    $("#Name").val(result.data.name);
                    $("#Surname").val(result.data.surname);
                    $('a[href="#AppUserProfile"]').addClass('active');

            }
            else {

            }
        });
    });

    $('a[href="#ChangePassword"]').click(function () {
        closeAllProfileFormRow();
         $('#ChangePassword').show();
          $('a[href="#ChangePassword"]').addClass('active');
    });

          $('a[href="#SystemSettings"]').click(function () {
        closeAllProfileFormRow();
         $('#SystemSettings').show();
          $('a[href="#SystemSettings"]').addClass('active');
    });




    function closeAllProfileFormRow() {
        $('#ChangePassword').hide();
        $('#AppUserProfile').hide();
        $('#SystemSettings').hide();
        $('a[href="#AppUserProfile"]').removeClass('active');
        $('a[href="#ChangePassword"]').removeClass('active');
        $('a[href="#SystemSettings"]').removeClass('active');
    }
    }







</script>
