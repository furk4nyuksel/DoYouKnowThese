    </div>

    <div class="dnone row" id="ChangePassword">
        <div class="col-md-8 order-md-1 order-2">
            <form id="ChangePasswordForm" data-toggle="validator" class="shake" asp-action="ChangePassword" asp-controller="Home" autocomplete="off" data-ajax="true" data-ajax-method="post" data-ajax-complete="completed">
                <div class="form-group">
                    Şuanki Şifre
                    <!-- ENTER MANE -->
                    <div class="form-group">
                        <!-- ENTER MESSAGE -->
                        <input type="password" class="form-control" name="NowPassword" id="NowPassword" placeholder="Şuanki Şifrenizi Giriniz" required data-error="Şuanki Şifrenizi Giriniz">
                        <div class="help-block with-errors"></div>
                    </div>
                </div>
                <div class="form-group">
                    Yeni Şifre
                    <!-- ENTER MESSAGE -->
                    <input type="password" class="form-control" name="Password" id="Password" placeholder="Yeni Şifrenizi Giriniz" required data-error="Yeni Şifrenizi Giriniz">
                    <div class="help-block with-errors"></div>
                </div>
                <div class="form-group">
                    Yeni Şifre Tekrar
                    <!-- ENTER MESSAGE -->
                    <input type="password" class="form-control" name="RePassword" id="RePassword" placeholder="Yeni Şifrenizi Tekrar Giriniz" required data-error="Yeni Şifrenizi Tekrar Giriniz">
                    <div class="help-block with-errors"></div>
                </div>

                <!-- button form submit -->
                <div class="submit">
                    <div class="content-button">
                        <button id="form-submit-ChangePasswordForm" type="submit" class="button-form">Gönder</button>
                    </div>
                    <div id="msgSubmit" class="h5 h5 text-danger hidden"></div>
                </div>
            </form>
        </div>
    </div>

